{
    "name": "ricardoper/slim4-twig-skeleton",
    "type": "library",
    "license": "MIT",
    "description": "A better Slim Framework 4 Skeleton with Twig that offers a sane folder structure where everything is customizable",
    "keywords": [
        "PHP",
        "Slim",
        "Framework",
        "Skeleton",
        "Twig",
        "Views",
        "Flash",
        "Messages"
    ],
    "homepage": "https://github.com/ricardoper",
    "authors": [
        {
            "name": "Ricardo Pereira",
            "email": "github@ricardopereira.es",
            "homepage": "http://ricardopereira.es"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "slim/slim": "^4.5",
        "slim/psr7": "^1.0",
        "pimple/pimple": "^3.3",
        "vlucas/phpdotenv": "^4.1",
        "monolog/monolog": "^2.0",
        "slim/twig-view": "^3.1",
        "slim/flash": "^0.4.0"
    },
    "require-dev": {
        "ricardoper/ddumper": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}
